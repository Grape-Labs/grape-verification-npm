{
  "name": "@grapenpm/grape-verification-registry",
  "version": "0.1.0",
  "description": "Client helpers for the Grape Verification Registry Solana program",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@noble/hashes": "^2.0.1",
    "@solana/web3.js": "^1.95.0",
    "buffer": "^6.0.3"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
